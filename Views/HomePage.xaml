<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="UTSLostAndFound.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:UTSLostAndFound.Converter"
    x:Name="homePage"
    Title="HomePage"
    BackgroundColor="White"
    Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BytesToImageConverter x:Key="BytesToImageConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout Margin="8,12" Spacing="0">
        <StackLayout
            Margin="0"
            HorizontalOptions="FillAndExpand"
            Orientation="Horizontal">
            <Border
                Margin="0"
                Padding="0"
                Background="LightGray"
                HorizontalOptions="FillAndExpand"
                StrokeShape="RoundRectangle 22"
                StrokeThickness="0">
                <StackLayout
                    Margin="12,2"
                    Orientation="Horizontal"
                    VerticalOptions="CenterAndExpand">
                    <Label
                        FontFamily="icon"
                        FontSize="20"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="&#xf349;"
                        TextColor="Black"
                        VerticalOptions="CenterAndExpand" />

                    <Entry
                        Margin="8,0"
                        FontSize="12"
                        HorizontalOptions="FillAndExpand"
                        Placeholder="Search Here"
                        Text="{Binding SearchText}"
                        TextColor="Black" />
                </StackLayout>
            </Border>

            <Border
                Margin="6,0"
                Padding="0"
                Background="#00C569"
                HeightRequest="40"
                HorizontalOptions="End"
                StrokeShape="RoundRectangle 20"
                StrokeThickness="0"
                WidthRequest="40">
                <Label
                    FontFamily="icon"
                    FontSize="22"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    Text="&#xf100;"
                    TextColor="White"
                    VerticalOptions="CenterAndExpand">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding IconTapCommand}" />
                    </Label.GestureRecognizers>
                </Label>
            </Border>
        </StackLayout>

        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout Spacing="0">
                <Label
                    Margin="0,12"
                    FontAttributes="Bold"
                    FontSize="16"
                    HorizontalOptions="Start"
                    HorizontalTextAlignment="Start"
                    Text="Categories"
                    TextColor="Black"
                    VerticalOptions="EndAndExpand" />

                <CollectionView
                    Margin="0,6"
                    ItemsSource="{Binding CategoriesDataList}"
                    SelectionMode="Single"
                    VerticalScrollBarVisibility="Never">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout
                            HorizontalItemSpacing="12"
                            Orientation="Vertical"
                            Span="5"
                            VerticalItemSpacing="0" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Spacing="0">
                                <Border
                                    Margin="0,4"
                                    Padding="12"
                                    Background="White"
                                    HeightRequest="60"
                                    HorizontalOptions="Center"
                                    Stroke="Gray"
                                    StrokeShape="RoundRectangle 30"
                                    VerticalOptions="Center"
                                    WidthRequest="60">
                                    <Label
                                        FontFamily="icon"
                                        FontSize="24"
                                        HorizontalOptions="Center"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding Icon}"
                                        TextColor="Black"
                                        VerticalOptions="Center"
                                        VerticalTextAlignment="Center" />
                                </Border>

                                <Label
                                    FontSize="14"
                                    HorizontalOptions="Center"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding CategoryName}"
                                    TextColor="Black"
                                    VerticalOptions="EndAndExpand" />
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:Reference homePage}, Path=BindingContext.CategoryTapCommand}" CommandParameter="{Binding .}" />
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <StackLayout
                    Margin="0,12"
                    Orientation="Horizontal"
                    Spacing="0">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        HorizontalOptions="Start"
                        HorizontalTextAlignment="Start"
                        Text="Lost Items"
                        TextColor="Black"
                        VerticalOptions="Center" />
                </StackLayout>

                <!-- description for Lost Items section -->
                <Label
                    Margin="0,2,0,12"
                    FontSize="12"
                    HorizontalOptions="Start"
                    HorizontalTextAlignment="Start"
                    Text="--Found someting? Then search for the rightful owner here!--"
                    TextColor="#929292"
                    VerticalOptions="Center" />

                <CollectionView Margin="0,12" ItemsSource="{Binding LostItemDataList}">

                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="12" Orientation="Horizontal" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout
                                Margin="0"
                                Background="White"
                                HorizontalOptions="FillAndExpand">
                                <Border
                                    Padding="0"
                                    Background="transparent"
                                    StrokeShape="RoundRectangle 6,0,0,6"
                                    StrokeThickness="1">
                                    <Image
                                        Aspect="AspectFill"
                                        HeightRequest="240"
                                        Source="{Binding ImageSource}"
                                        WidthRequest="165" />
                                </Border>

                                <StackLayout Margin="0,8,0,0">
                                    <Label
                                        FontSize="16"
                                        HorizontalOptions="Center"
                                        Text="{Binding Name}"
                                        TextColor="Black"
                                        VerticalOptions="Start" />

                                    <Label
                                        FontSize="12"
                                        HorizontalOptions="Center"
                                        Text="{Binding LastSeen}"
                                        TextColor="#929292"
                                        VerticalOptions="Start" />

                                    <Label
                                        FontSize="16"
                                        HorizontalOptions="Center"
                                        Text="{Binding Date}"
                                        TextColor="#00C569"
                                        VerticalOptions="Start" />
                                </StackLayout>
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:Reference homePage}, Path=BindingContext.TapCommand}" CommandParameter="{Binding .}" />
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <StackLayout
                    Margin="0,12"
                    Orientation="Horizontal"
                    Spacing="0">
                    <Label
                        FontAttributes="Bold"
                        FontSize="16"
                        HorizontalOptions="Start"
                        HorizontalTextAlignment="Start"
                        Text="Found Items"
                        TextColor="Black"
                        VerticalOptions="Center" />
                </StackLayout>

                <!-- description for Found Items section -->
                <Label
                    Margin="0,2,0,12"
                    FontSize="12"
                    HorizontalOptions="Start"
                    HorizontalTextAlignment="Start"
                    Text="--Searching for lost things? browse here to see if the other students have found it!--"
                    TextColor="#929292"
                    VerticalOptions="Center" />

                <CollectionView Margin="0,12" ItemsSource="{Binding FoundItemDataList}">

                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="12" Orientation="Horizontal" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout
                                Margin="0"
                                Background="White"
                                HorizontalOptions="FillAndExpand">
                                <Border
                                    Padding="0"
                                    Background="transparent"
                                    StrokeShape="RoundRectangle 6,0,0,6"
                                    StrokeThickness="1">
                                    <Image
                                        Aspect="AspectFill"
                                        HeightRequest="240"
                                        Source="{Binding ImageSource}"
                                        WidthRequest="165" />
                                </Border>

                                <StackLayout Margin="0,8,0,0">
                                    <Label
                                        FontSize="16"
                                        HorizontalOptions="Center"
                                        Text="{Binding Name}"
                                        TextColor="Black"
                                        VerticalOptions="Start" />

                                    <Label
                                        FontSize="12"
                                        HorizontalOptions="Center"
                                        Text="{Binding LastSeen}"
                                        TextColor="#929292"
                                        VerticalOptions="Start" />

                                    <Label
                                        FontSize="16"
                                        HorizontalOptions="Center"
                                        Text="{Binding Date}"
                                        TextColor="#00C569"
                                        VerticalOptions="Start" />
                                </StackLayout>
                                <StackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding Source={x:Reference homePage}, Path=BindingContext.TapCommand}" CommandParameter="{Binding .}" />
                                </StackLayout.GestureRecognizers>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>

